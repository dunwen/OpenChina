<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:background="@drawable/bloglist_item_left_shape"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_comment"
                />
            <TextView
                android:id="@+id/rvitem_tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="1234"
                android:textColor="#fff"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_margin="4dp"

        >
        <TextView
            android:id="@+id/rvitem_tv_blog_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_weight="7"
            android:textColor="@color/primary_text"
            android:text="好长长好长好长好长长好长好长好长长好长好长好长"
            />
        <TextView
            android:id="@+id/rvitem_tv_blog_author"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="author: 顿顿啊"
            android:layout_weight="1.5"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/rvitem_tv_pub_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="1234-12-12 12:12:12"
            android:layout_weight="1.5"
            android:textSize="16sp"
            />

    </LinearLayout>
</LinearLayout>